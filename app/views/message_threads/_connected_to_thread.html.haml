%li
  - if policy(user).view_profile?
    = link_to user_profile_path(user), class: ("leading" if leading) do
      %span.thumb{style: "max-width: 100px; max-height: 100px"}
        - if user.profile.picture
          = image_tag(path_to_url(user.profile.picture_thumbnail.url), alt: I18n.t("user.profiles.show.profile_picture_title", name: user.name), style: "max-width:100%;max-height:100%")
      %p= "#{user.name} #{leading ? t('.leading') : ''}"
  - else
    "#{user.display_name_or_anon} #{leading ? t('.leading') : ''}"
