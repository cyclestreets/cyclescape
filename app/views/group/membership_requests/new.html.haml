%h1= t ".title", group_name: @group.name

%p= auto_link simple_format @group.profile.joining_instructions
.explain
  %p= t ".your_membership_request_will"

= semantic_form_for @request do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :message
  = f.actions do
    = f.action :submit, button_html: {class: "btn-green submit"}
    = cancel_link group_path(@group)
