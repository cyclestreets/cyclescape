%section.new-thread
  %h1= t ".title"
  %p= t ".for_group", name: @thread.group.name
  = semantic_form_for @thread, as: :thread, url: {action: :create} do |f|
    = f.semantic_errors
    = f.inputs do
      = f.input :title
      = f.input :privacy, as: :select, collection: @thread.group.thread_privacy_options_map_for(current_user)
      = semantic_fields_for @message do |f2|
        = f2.semantic_errors
        = f2.input :body, input_html: { rows: 15, class: "tinymce" }
      = f.input :tags_string
    = f.actions do
      = f.action :submit
      = cancel_link
