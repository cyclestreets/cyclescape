-# frozen_string_literal: true

%h2
  = t ".change_password_caption"
= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :reset_password_token, as: :hidden
    = f.label :password, t(".new_password")
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation, t(".confirm_new_password")
    %br/
    = f.password_field :password_confirmation
  %div= f.submit t(".change_password")
= render partial: "devise/shared/links"
