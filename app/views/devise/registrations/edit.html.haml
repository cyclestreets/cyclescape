= render "shared/profile_menu"
.edit-user-form
  %h1= t ".title"
  = semantic_form_for resource, as: resource_name, url: registration_path(resource_name), html: {method: :put} do |f|
    = devise_error_messages!
    = f.inputs do
      = f.input :full_name
      = f.input :display_name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.input :current_password, required: true
    = f.actions do
      = f.action :submit
.cancel-form
  %h2= t ".cancel_header"
  %p
    = t ".unhappy_with_account_html", confirm_link: link_to(t(".cancel_account"), registration_path(resource_name), data: { confirm: t(".confirm") }, method: :delete)
  = link_to t(".back"), :back
