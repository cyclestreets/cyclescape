<% leader = component.created_by %>
<% leader_link = if UserPolicy.new(@subscriber, leader).view_profile?
                   link_to(leader.name, user_profile_url(leader))
                 else
                   leader.display_name_or_anon
                 end
               %>

<% if component.unleading %>
<%= t ".removed_leader_html", leader_link: leader_link, thread_title: component.message.thread.title %>
<% else %>
<%= t ".new_leader_html", leader_link: leader_link, thread_title: component.message.thread.title %>
<% end %>
<br>
<%= raw component.description %>
