%h1= t ".title"
%p= t ".introduction"
%table
  %thead
    %th= t ".id"
    %th= t ".display_name"
    %th= t ".full_name"
    %th= t ".email"
    %th= t ".role"
    %th= t ".created"
    %th= t ".disabled"
    %th= t ".edit"
    %th= t ".preferences"
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.display_name
        %td= link_to user.full_name, user_profile_path(user)
        %td= user.email
        %td= t "user_roles.#{user.role}"
        %td= t ".created_at", time_ago: time_ago_in_words(user.created_at)
        %td= t ".disabled_at", time_ago: time_ago_in_words(user.disabled_at) if user.disabled_at?
        %td= link_to t(".edit"), edit_admin_user_path(user)
        %td= link_to t(".preferences"), edit_user_prefs_path(user)
